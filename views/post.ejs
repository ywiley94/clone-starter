<!doctype html>
<html>
<head>
    <title>21 Savage Fan Site</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <a href="/profile">Profile</a>
        <a href="/feed">Feed</a>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

       
        <div class="col-sm-6">
          <h3>Posts</h3>
          <ul class="messages">
          <% for(var i=0; i<posts.length; i++) {%>
            <li class="message">
              <h4><%= posts[i].caption %></h4>
              <img src="../<%= posts[i].img %>" alt="">
              <span><%= posts[i].thumbUp %></span>

              <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
              <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
              <form action="/makeComment" method="post">
                <h5>Comments</h5>
                <input id="comment" type="text" name="comments">
                <button id="commentSubmit" type="button"> Submit </button>
              </form>
            </li>

          <% } %>
          </ul>


</div>

<script src="main.js"></script>

</body>
</html>
